<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/not_trans_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="to translate tekscixidddddddd"
            android:maxWidth="180dp"
            android:layout_marginRight="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/trans_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="translated tekscix"
            android:layout_alignBaseline="@id/not_trans_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_toRightOf="@id/not_trans_text"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>