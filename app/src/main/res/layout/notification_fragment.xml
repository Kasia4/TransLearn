<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationFragment"
    android:background="@color/gray">

    <!-- TODO: Update blank fragment layout -->
    <TimePicker
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_background"/>
    <Button
        android:id="@+id/set_notification_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:foregroundGravity="center"
        android:text="Set daily notification"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/time_picker" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notification_details_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Notification set on: 15:45"
        android:textAlignment="center"
        android:layout_below="@id/set_notification_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="@color/design_default_color_background"
        android:textStyle="bold"
        android:gravity="center_horizontal" />
    <Button
        android:id="@+id/cancel_notification_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_notification_button"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/notification_details_text"
        android:layout_alignBaseline="@id/notification_details_text"
        android:background="#F44336"
        android:foregroundGravity="center"
        android:text="Cancel"
        android:textStyle="bold" />

</RelativeLayout>